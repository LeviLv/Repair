                <div class="item-content">
                    <div class="item-media"><i class="icon icon-form-comment"></i></div>
                    <div class="item-inner">
                        <div class="item-title label">住址</div>
                        <div class="item-input">
                            <textarea v-model="user.homeAddress"></textarea>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div class="content-block">
        <div class="row">
            <div class="col-50"><a href="#" class="button button-big button-fill button-danger">取消</a></div>
            <div class="col-50"><a href="#" class="button button-big button-fill button-success">提交</a></div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var vue = new Vue({
            el: "#userinfo",
            data: function () {
                return {
                    userId: 1,
                    user: {},
                    communityId: 1,
                    community: [],
                    smsCode: ''
                }
            },
            methods: {
                editUser: function () {
                    var user = vue.$data.user;
                    if (user.name == '') {
                        $.toast("用户名不能为空");
                        return;
                    }
                    if (user.homeNum == '') {
                        $.toast("门牌号不能为空");
                        return;
                    }
                    if (user.mobile == '') {
                        $.toast("手机号不能为空");
                        return;
                    }
                    if (user.homeAddress == '') {
                        $.toast("详细住址不能为空");
                        return;
                    }

                    var url =  '/User/EditUser';
                    var _data = JSON.stringify(this.$data.user);
                    post(url, _data, function (result) {
                        var msg = '更改成功'
                        $.alert(msg, "提示", function () {
                            window.location.href = '/Home/Index';
                        });
                    })
                }
            },
            created: function () {
                var _this = this;
                $.get("/User/GetLoginUser", function (result) {
                    vue.user = result.data;
                });

                this.$data.community = @Html.Raw(ViewBag.Community);
            }
        })
    </script>
}